light-gray = #f5f5f5;
gray = #ccc;
grid = 48em;

*{
    padding 0
    margin 0
    box-sizing border-box
    background none
    outline none
}

body
    background light-gray
    font-family: 'Roboto Slab', serif

form
    margin 1em 0
    border 4px solid
    border-image linear-gradient(45deg, #D9A116, #58555A) 1 round
    overflow hidden

input
    width calc(100% - 156px)
    padding .3em 1em
    border none
    font-size 1.5vw
    font-family: 'Roboto Slab', serif
    font-weight 800
    &::placeholder
        font-weight 400
    

button
    width 20%;
    padding 1em
    border none
    background #58555A
    color #FBF37C
    font-size 1.5vw
    cursor pointer

.grid
    width 100%
    max-width grid
    margin 5vh auto